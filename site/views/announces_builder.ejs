<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/style.css">
    <link rel="stylesheet" href="../css/login.css">
    <link rel="stylesheet" href="../css/annonce-builder.css">
    <title>Annonce builder</title>
    <link rel="icon" type="image/svg+xml" href="../image/logo.svg">
</head>
<body>

    <div class="main">

        <header id="header">
            <div id="website-logo">
                <img class="logo" src="../image/logo.svg"  alt="Gradient Shape Logo Element" loading="lazy">
                <span class="title" ><a href=".." style="text-decoration:none; color: white;">&nbsp; LocaWeb </a> </span>  
            </div>
            
            <a id="sign_up" href="/login" class="btn-grad">Sign-up / Login</a>

            <% if (username !== undefined) { %>
                <a id="username" class="btn-grad" href="#"> <%= username %> </a>
                <script>
                    document.getElementById('sign_up').style.display='none';
                </script>
            <% } %>
        </header>

        <div class="form-title">
            <h1>Créer une annonce</h1>
        </div>

        <% if (error != undefined) { %>
            <div class="error-container">
                <a class="error"> <%= error %></a>
            </div>
            <style>
                .error{
                    color:green;
                    font-size: 25px;
                }
                .flex1 {
                    margin-top: 0px;    
                }
                .error-container {
                    margin-bottom: 20px;
                }
            </style>
        <% } %>

        <div class="form-container">

            <form method="POST" enctype="multipart/form-data" action="/announces_builder">
                <!-- Title -->
                <input class="textinput" type="text" id="title" name="title" placeholder="Title of your offer">
                <br>
                <hr style="width: 80%; border: 3px dashed transparent;">
                <!-- Description -->
                <textarea class = "textinput" id="description" name="description" placeholder="Description of the offer" maxlength="500" style="height:200px;resize: none;"></textarea>
                <br>
                <hr style="width: 80%; border: 3px dashed transparent;">
                <!-- City -->
                <input  class="textinput smallinput"type="text" id="city" name="city" placeholder="City">
                <br>
                <hr style="width: 80%; border: 3px dashed transparent;">
                <!-- Price -->
                <div class="price">
                    <input  class="textinput smallinput" type="number" id="price" name="price" placeholder="Price" min="1">

                    <select class="textinput" style="width:200px;" name="rate">
                        <option value="0">Select rate:</option>
                        <option value="1">€/min</option>
                        <option value="2">€/halfhour</option>
                        <option value="3">€/h</option>
                        <option value="4">€/day</option>
                        <option value="5">€/week</option>
                    </select>
                    <br>
                </div>
                <hr style="width: 80%; border: 3px dashed transparent;">
                <!-- Image -->
                <input  class="textinput smallinput" type="file" id="image" name="images" accept="image/*">
                <br>
                <hr style="width: 80%; border: 3px dashed transparent;">
                <!-- submit btn -->
                <button class = "btn-grad" type="submit" style="border: 0;display: block;margin: 0 auto; float: inherit;">Créer l'annonce</button> 
                <br>
            </form>

        </div>


    </div>

    
    </body>
</html>